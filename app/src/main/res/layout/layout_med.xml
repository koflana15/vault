<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medication Name"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/medView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title1"
        android:text="Medication Name"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medView1"
        android:layout_marginTop="3dp"
        android:text="Medication Type"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/medView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medication Type"
        android:layout_below="@+id/title2"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/title3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medView8"
        android:layout_marginTop="3dp"
        android:text="Dosage"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/medView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title3"
        android:text="Dosage"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/title4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medView3"
        android:text="Instuctions"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/medView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title4"
        android:text="Instuctions"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/title5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medView4"
        android:layout_marginTop="3dp"
        android:text="Reason"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/medView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title5"
        android:text="Reason"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/title6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medView5"
        android:text="Start Date"
        android:layout_marginTop="3dp"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/medView6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title6"
        android:text="Start Date"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/title7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medView6"
        android:layout_marginTop="3dp"
        android:text="Period"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/medView7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title7"
        android:text="Period"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/archivebutton"
        android:layout_height="30dp"
        android:layout_width="138dp"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:text="Move To Archive"
        android:textAlignment="center"
        android:textColor="@color/colorAccent"
        android:layout_below="@+id/medView7"
        android:layout_toEndOf="@+id/editbutton"
        android:layout_alignTop="@+id/editbutton"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/editbutton"
        android:layout_height="30dp"
        android:layout_width="50dp"
        android:layout_marginLeft="10dp"
        android:text="Edit"
        android:textAlignment="center"
        android:textSize="17dp"
        android:textColor="@color/colorAccent"
        android:layout_toEndOf="@+id/deletebutton"
        android:layout_alignTop="@id/deletebutton"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/deletebutton"
        android:layout_height="30dp"
        android:layout_width="70dp"
        android:layout_marginLeft="15dp"
        android:textSize="17dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/medView7"
        android:text="Delete"
        android:textColor="#FF0000"
        tools:ignore="RtlCompat" />





</RelativeLayout>