<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="10dp"
    >

    <TextView
        android:id="@+id/title1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cause"
        android:textColor="@color/colorAccent"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/medView1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title1"
        android:text="Medication Name"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/title2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medView1"
        android:layout_marginTop="3dp"
        android:text="Reaction"
        android:textColor="@color/colorAccent"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/medView8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medication Type"
        android:layout_below="@+id/title2"
        android:textSize="16sp" />



    <TextView
        android:id="@+id/delete"
        android:layout_height="30dp"
        android:layout_width="70dp"
        android:layout_marginLeft="153dp"
        android:textSize="17dp"
        android:textAlignment="center"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/medView8"
        android:text="Delete"
        android:textColor="#FF0000"
        tools:ignore="RtlCompat" />

    <TextView
        android:id="@+id/edit"
        android:layout_height="30dp"
        android:layout_width="50dp"
        android:textSize="17dp"
        android:layout_marginLeft="10dp"
        android:textAlignment="center"
        android:layout_toEndOf="@+id/delete"
        android:layout_alignTop="@+id/delete"
        android:text="Edit"
        android:textColor="@color/colorAccent"
        tools:ignore="RtlCompat" />





</RelativeLayout>